{
  "schemaVersion": 1,
  "id": "smbs",
  "version": "${version}",
  "name": "Simple Mob Buff System",
  "description": "Gives a chance for mobs to spawn with buffs and makes them drop additional rewards based on how strong they are.",
  "authors": ["pajic"],
  "contact": {},
  "license": "MIT",
  "icon": "icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "me.pajic.smbs.ClientMain"
    ],
    "main": [
      "me.pajic.smbs.Main"
    ]
  },
  "mixins": [
    "smbs.mixins.json"
  ],
  "accessWidener": "smbs.accesswidener",
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}",
    "fzzy_config": "*"
  }
}
